
const readline = require('readline').createInterface({
  input: process.stdin,
  output: process.stdout
});

readline.question('Enter the value of n: ', (input) => {
  let n = Number.parseInt(input);
  let sum = 0;
  for(let i = 0; i < n; i++) {
    sum = sum + (i+1);
    console.log((i+1)"+")
  }
  console.log("Sum of first " + n + " natural numbers is " + sum);
  readline.close();
});
